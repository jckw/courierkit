    "typecheck": "yarn workspaces foreach -Ap run typecheck"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.13",
    "@types/node": "^25.2.0",
    "bun-types": "^1.3.8",
    "typescript": "^5.9.3"
  }
}
